use v5.10;
use strict;
use warnings;
use Cwd qw( abs_path );
use File::Basename qw( dirname );
use lib dirname(abs_path($0));
#use ASoS::Alias;
use Config;
use CPAN;
#use ASoS::Depend::Lazy;

use ASoS::Say;
use ASoS::Log;
use ASoS::File;
use ASoS::Prompt;
use ASoS::Pkg;
use ASoS::Cfg;

use ASoS::Common qw(:ALL);
use Data::Dumper qw(Dumper);

