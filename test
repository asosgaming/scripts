#^ set log level
$log{LOGLEVEL}->(MOD_DEBUG);
#. output level number
$say{INFO}->("Log level number is '".WHITE.$log{LOGLEVEL}->().DEFAULT."'");

#. output BIN hash
#-$say{OK}->(Data::Dumper->Dump([\%BIN], [qw(BIN)]));
#. output OS hash
#-$say{OK}->(Data::Dumper->Dump([\%OS], [qw(OS)]));
#. output PERL hash
#-$say{OK}->(Data::Dumper->Dump([\%PERL], [qw(PERL)]));
#. output RESULT hash
#-map{$say{OK}->("$_ => $RESULT{$_}")}keys %RESULT;
#-$say{OK}->(Data::Dumper->Dump([\%RESULT], [qw(RESULT)]));

#. log BIN hash
$log{DEBUG}->(-var => \%BIN, -name => 'BIN');
#. log OS and PERL hash
$log{DEBUG}->(-vars => [\%OS, \%PERL], -names => ['OS', 'PERL']);
#. log RESULT hash
$log{DEBUG}->(-vars => [\%RESULT], -names => [qw(RESULT)]);

$file{run}->(
    -app => 'ls', '/', 
    -centos => {
        -args => '-la', 
        -values => ['/home']
    },
    -centos6 => {
        -args => '-l', 
        -values => ['/etc']
    },
    -centos7 => {
        -app => 'ls', 
        -args => '-A', 
        -values => ['/root']
    },
    -success => 'files $HOME done',
    -vars => ["one","two","three"]
);

